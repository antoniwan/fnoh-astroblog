---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
	description: string;
	image?: import('astro').ImageMetadata;
	showHeader?: boolean;
	showFooter?: boolean;
	class?: string;
}

const {
	title,
	description,
	image,
	showHeader = true,
	showFooter = true,
	class: className = ''
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={image} />
	</head>
	<body class={className}>
		{showHeader && <Header />}
		
		<main class="main-content">
			<slot />
		</main>
		
		{showFooter && <Footer />}
	</body>
</html>

<style>
	.main-content {
		width: 100%;
		max-width: 100%;
		/* Account for fixed header (60px) + footer height + proper spacing */
		min-height: calc(100vh - 60px - 120px - var(--spacing-2xl));
		padding: 0 var(--container-padding);
		/* Add top padding to prevent content from being hidden behind fixed header */
		padding-top: calc(60px + var(--spacing-lg));
		/* Add top margin to account for fixed header */
		margin-top: 0;
	}
	
	/* Ensure all direct children of main-content have proper spacing */
	.main-content > *:first-child {
		margin-top: 0;
	}
	
	.main-content > *:last-child {
		margin-bottom: var(--spacing-2xl);
	}
	
	/* Handle common content elements */
	.main-content p {
		max-width: 800px;
		line-height: var(--line-height-relaxed);
		margin-bottom: var(--spacing-lg);
	}
	
	.main-content h1,
	.main-content h2,
	.main-content h3,
	.main-content h4,
	.main-content h5,
	.main-content h6 {
		max-width: 800px;
		margin-bottom: var(--spacing-md);
	}
	
	/* Responsive adjustments */
	@media (max-width: 1024px) {
		.main-content {
			padding: 0 var(--container-padding-mobile);
			padding-top: calc(60px + var(--spacing-lg));
		}
	}
	
	@media (max-width: 768px) {
		.main-content {
			padding: 0 var(--container-padding-mobile);
			/* Adjust top padding for mobile header height (55px) */
			padding-top: calc(55px + var(--spacing-md));
			/* Adjust min-height for mobile */
			min-height: calc(100vh - 55px - 100px - var(--spacing-xl));
		}
		
		.main-content > *:first-child {
			margin-top: 0;
		}
		
		.main-content > *:last-child {
			margin-bottom: var(--spacing-xl);
		}
	}
	
	@media (max-width: 480px) {
		.main-content {
			/* Further adjust top padding for small mobile */
			padding-top: calc(55px + var(--spacing-sm));
			/* Further adjust min-height for small mobile */
			min-height: calc(100vh - 55px - 90px - var(--spacing-lg));
		}
		
		.main-content > *:first-child {
			margin-top: 0;
		}
		
		.main-content > *:last-child {
			margin-bottom: var(--spacing-lg);
		}
	}
</style>
