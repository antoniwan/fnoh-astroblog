---
import BaseLayout from './BaseLayout.astro';
import Container from '../components/ui/Container.astro';
import { type CollectionEntry, render } from 'astro:content';

export interface Props {
	post: CollectionEntry<'writings'>;
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={post.data.title} description={post.data.description}>
	<Container size="md" as="article" class="article">
		<header class="article-header">
			<h1>{post.data.title}</h1>
			<p class="article-description">{post.data.description}</p>
			<div class="article-meta">
				<time datetime={post.data.pubDate.toISOString()}>
					{post.data.pubDate.toLocaleDateString('en-US', { 
						year: 'numeric', 
						month: 'long', 
						day: 'numeric' 
					})}
				</time>
				{post.data.updatedDate && (
					<span class="updated-date">
						Updated: {post.data.updatedDate.toLocaleDateString('en-US', { 
							year: 'numeric', 
							month: 'long', 
							day: 'numeric' 
						})}
					</span>
				)}
			</div>
		</header>

		<div class="article-content">
			<Content />
		</div>
	</Container>
</BaseLayout>

<style>
	.article {
		/* Container component handles width, max-width, and padding */
		background-color: var(--color-bg);
		color: var(--color-text);
	}
	
	.article-header {
		margin-bottom: var(--spacing-2xl);
		text-align: center;
		padding: var(--spacing-xl) 0;
		border-bottom: 2px solid var(--color-border-light);
	}
	
	.article-header h1 {
		font-family: var(--font-family-heading);
		font-size: var(--font-size-5xl);
		font-weight: var(--font-weight-normal);
		line-height: var(--line-height-tight);
		letter-spacing: var(--letter-spacing-tight);
		color: var(--color-heading);
		margin: 0 0 var(--spacing-lg) 0;
		text-rendering: optimizeLegibility;
		-webkit-font-feature-settings: "liga" 1, "kern" 1;
		font-feature-settings: "liga" 1, "kern" 1;
	}
	
	.article-description {
		font-size: var(--font-size-lg);
		color: var(--color-text-light);
		margin: 0 0 var(--spacing-lg) 0;
		line-height: var(--line-height-relaxed);
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}
	
	.article-meta {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: var(--spacing-sm);
		font-size: var(--font-size-sm);
		color: var(--color-text-lighter);
	}
	
	.updated-date {
		font-style: italic;
		opacity: 0.8;
	}
	
	.article-content {
		line-height: var(--line-height-relaxed);
		padding: var(--spacing-xl) 0;
		font-size: var(--font-size-lg);
		color: var(--color-text);
	}
	
	/* Enhanced article typography */
	.article-content p {
		margin-bottom: var(--spacing-lg);
		line-height: var(--line-height-relaxed);
		color: var(--color-text);
		text-align: left;
	}
	
	.article-content h2 {
		font-family: var(--font-family-heading);
		font-size: var(--font-size-4xl);
		font-weight: var(--font-weight-normal);
		line-height: var(--line-height-tight);
		letter-spacing: var(--letter-spacing-tight);
		color: var(--color-heading);
		margin-top: var(--spacing-2xl);
		margin-bottom: var(--spacing-lg);
		text-rendering: optimizeLegibility;
	}
	
	.article-content h3 {
		font-family: var(--font-family-heading);
		font-size: var(--font-size-3xl);
		font-weight: var(--font-weight-normal);
		line-height: var(--line-height-tight);
		letter-spacing: var(--letter-spacing-tight);
		color: var(--color-heading);
		margin-top: var(--spacing-xl);
		margin-bottom: var(--spacing);
		text-rendering: optimizeLegibility;
	}
	
	.article-content h4 {
		font-family: var(--font-family-heading);
		font-size: var(--font-size-2xl);
		font-weight: var(--font-weight-normal);
		line-height: var(--line-height-tight);
		letter-spacing: var(--letter-spacing-tight);
		color: var(--color-heading);
		margin-top: var(--spacing-lg);
		margin-bottom: var(--spacing);
		text-rendering: optimizeLegibility;
	}
	
	.article-content h5 {
		font-family: var(--font-family-heading);
		font-size: var(--font-size-xl);
		font-weight: var(--font-weight-normal);
		line-height: var(--line-height-tight);
		letter-spacing: var(--letter-spacing-tight);
		color: var(--color-heading);
		margin-top: var(--spacing-lg);
		margin-bottom: var(--spacing);
		text-rendering: optimizeLegibility;
	}
	
	.article-content h6 {
		font-family: var(--font-family-heading);
		font-size: var(--font-size-lg);
		font-weight: var(--font-weight-normal);
		line-height: var(--line-height-tight);
		letter-spacing: var(--letter-spacing-tight);
		color: var(--color-heading);
		margin-top: var(--spacing-lg);
		margin-bottom: var(--spacing);
		text-rendering: optimizeLegibility;
	}
	
	/* Enhanced list styling */
	.article-content ul,
	.article-content ol {
		margin-bottom: var(--spacing-lg);
		padding-left: var(--spacing-xl);
		line-height: var(--line-height-relaxed);
	}
	
	.article-content li {
		margin-bottom: var(--spacing-sm);
		color: var(--color-text);
	}
	
	/* Enhanced blockquote styling */
	.article-content blockquote {
		margin: var(--spacing-xl) 0;
		padding: var(--spacing-lg) var(--spacing-xl);
		border-left: 4px solid var(--color-link);
		background-color: var(--color-blockquote-bg);
		font-style: italic;
		font-size: var(--font-size-lg);
		color: var(--color-text);
		line-height: var(--line-height-relaxed);
		border-radius: var(--border-radius-md);
		box-shadow: var(--shadow-sm);
	}
	
	.article-content blockquote p {
		margin: 0;
		font-family: var(--font-family-serif);
	}
	
	/* Enhanced code styling */
	.article-content code {
		font-family: var(--font-family-mono);
		font-size: var(--font-size-sm);
		background-color: var(--color-inline-code-bg);
		color: var(--color-code-text);
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: var(--border-radius-sm);
		border: 1px solid var(--color-code-border);
		font-weight: var(--font-weight-medium);
	}
	
	.article-content pre {
		font-family: var(--font-family-mono);
		font-size: var(--font-size-sm);
		background-color: var(--color-code-bg);
		color: var(--color-code-text);
		padding: var(--spacing-lg);
		border-radius: var(--border-radius-md);
		border: 1px solid var(--color-code-border);
		overflow-x: auto;
		line-height: var(--line-height-relaxed);
		max-width: 100%;
		margin: var(--spacing-xl) 0;
		box-shadow: var(--shadow-sm);
	}
	
	/* Enhanced table styling */
	.article-content table {
		width: 100%;
		border-collapse: collapse;
		margin: var(--spacing-xl) 0;
		font-size: var(--font-size-sm);
		max-width: 100%;
		border: 1px solid var(--color-table-border);
		border-radius: var(--border-radius-md);
		overflow: hidden;
		box-shadow: var(--shadow-sm);
	}
	
	.article-content th,
	.article-content td {
		padding: var(--spacing);
		text-align: left;
		border-bottom: 1px solid var(--color-table-border);
		color: var(--color-text);
	}
	
	.article-content th {
		background-color: var(--color-table-header-bg);
		font-weight: var(--font-weight-semibold);
		color: var(--color-heading);
		border-bottom: 2px solid var(--color-table-border);
	}
	
	.article-content tr:hover {
		background-color: var(--color-hover-bg);
	}
	
	/* Enhanced link styling */
	.article-content a {
		color: var(--color-link);
		text-decoration: none;
		transition: all var(--transition-fast);
		border-bottom: 1px solid transparent;
	}
	
	.article-content a:hover {
		color: var(--color-link-hover);
		border-bottom-color: var(--color-link-hover);
	}
	
	/* Enhanced image styling */
	.article-content img {
		max-width: 100%;
		height: auto;
		border-radius: var(--border-radius-md);
		box-shadow: var(--shadow-sm);
		margin: var(--spacing-lg) 0;
	}
	
	/* Enhanced horizontal rule styling */
	.article-content hr {
		border: none;
		height: 1px;
		background-color: var(--color-border-light);
		margin: var(--spacing-2xl) 0;
	}
	
	/* Responsive adjustments */
	@media (max-width: 1024px) {
		.article-header h1 {
			font-size: var(--font-size-4xl);
		}
		
		.article-content {
			font-size: var(--font-size-base);
		}
	}
	
	@media (max-width: 768px) {
		.article-header {
			padding: var(--spacing) 0;
			margin-bottom: var(--spacing-xl);
		}
		
		.article-content {
			padding: var(--spacing) 0;
			font-size: var(--font-size-base);
		}
		
		.article-header h1 {
			font-size: var(--font-size-3xl);
			margin-bottom: var(--spacing);
		}
		
		.article-content h2 {
			font-size: var(--font-size-2xl);
			margin-bottom: var(--spacing);
		}
		
		.article-content h3 {
			font-size: var(--font-size-xl);
			margin-bottom: var(--spacing);
		}
		
		.article-content blockquote {
			padding: var(--spacing) var(--spacing-lg);
			margin: var(--spacing-lg) 0;
			font-size: var(--font-size-base);
		}
		
		.article-content ul,
		.article-content ol {
			padding-left: var(--spacing-lg);
		}
	}
	
	@media (max-width: 480px) {
		.article-header h1 {
			font-size: var(--font-size-2xl);
		}
		
		.article-content h2 {
			font-size: var(--font-size-xl);
		}
		
		.article-content h3 {
			font-size: var(--font-size-lg);
		}
		
		.article-content {
			font-size: var(--font-size-base);
		}
	}
</style>
