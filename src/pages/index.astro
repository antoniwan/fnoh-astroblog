---
import BaseLayout from "../layouts/BaseLayout.astro";

import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import { getCollection } from "astro:content";
import { getCategoriesWithPostCounts } from "../utils/categories";

// Get all blog posts
const posts = await getCollection("writings");

// Get categories with post counts
const categoriesWithCounts = await getCategoriesWithPostCounts();

// Get uncategorized posts (posts without category references)
const uncategorizedPosts = posts.filter((post) => !post.data.category);

// Calculate total posts
const totalPosts = posts.length;
---

<BaseLayout
  title={SITE_TITLE}
  description={SITE_DESCRIPTION}
  type="organization"
>
  <header class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">{SITE_TITLE}</h1>
    <p class="text-xl text-gray-600 max-w-3xl mx-auto">
      {SITE_DESCRIPTION} Currently featuring <strong
        >{totalPosts} total writings</strong
      > across various categories.
    </p>
  </header>

  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
    <div class="grid gap-6">
      {
        categoriesWithCounts.map((category) => {
          const hasPosts = category.postCount > 0;

          return (
            <section class={`bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition-shadow duration-200 ${!hasPosts ? "opacity-75" : ""}`}>
              {hasPosts ? (
                <a
                  href={`/${category.slug}`}
                  class="block p-6 hover:bg-gray-50 transition-colors duration-200"
                  data-astro-reload
                >
                  <div class="flex items-start justify-between">
                    <div class="flex items-start space-x-4">
                      <span class="text-3xl">{category.emoji}</span>
                      <div class="flex-1">
                        <h2 class="text-xl font-semibold text-gray-900 mb-2">{category.title}</h2>
                        <p class="text-gray-600 leading-relaxed">{category.description}</p>
                      </div>
                    </div>
                    <div class="flex items-center space-x-2 text-sm text-gray-500">
                      <span class="font-medium">{category.postCount}</span>
                      <span>posts</span>
                      <span class="text-blue-600 text-lg">‚Üí</span>
                    </div>
                  </div>
                </a>
              ) : (
                <div class="p-6">
                  <div class="flex items-start justify-between">
                    <div class="flex items-start space-x-4">
                      <span class="text-3xl opacity-60">{category.emoji}</span>
                      <div class="flex-1">
                        <h2 class="text-xl font-semibold text-gray-900 mb-2">{category.title}</h2>
                        <p class="text-gray-600 leading-relaxed mb-3">{category.description}</p>
                        <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                          <span>Coming Soon</span>
                        </div>
                      </div>
                    </div>
                    <div class="flex items-center space-x-2 text-sm text-gray-400">
                      <span class="font-medium">0</span>
                      <span>posts</span>
                      <span class="text-lg">‚è≥</span>
                    </div>
                  </div>
                </div>
              )}
            </section>
          );
        })
      }

      {/* View All Posts Section */}
      <section class="bg-blue-50 rounded-lg border border-blue-200 shadow-sm hover:shadow-md transition-shadow duration-200">
        <a href="/writings" class="block p-6 hover:bg-blue-100 transition-colors duration-200" data-astro-reload>
          <div class="flex items-start justify-between">
            <div class="flex items-start space-x-4">
              <span class="text-3xl">üìö</span>
              <div class="flex-1">
                <h2 class="text-xl font-semibold text-blue-900 mb-2">All Writings</h2>
                <p class="text-blue-700 leading-relaxed">
                  Browse all posts chronologically, including uncategorized ones.
                </p>
              </div>
            </div>
            <div class="flex items-center space-x-2 text-sm text-blue-600">
              <span class="font-medium">{totalPosts}</span>
              <span>posts</span>
              <span class="text-lg">‚Üí</span>
            </div>
          </div>
        </a>
      </section>
    </div>
  </main>
</BaseLayout>
