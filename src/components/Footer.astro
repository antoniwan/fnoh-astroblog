---
import { 
  Rss,
  FileText
} from 'lucide-astro';
import { SITE_TITLE } from '../consts';
import Container from './ui/Container.astro';
import ScrollToTop from './ui/ScrollToTop.astro';

const today = new Date();
---

<footer class="footer">
  <!-- <div class="footer-content">
    for later use!
  </div> -->
  
  <Container size="full" class="footer-bottom">
    <div class="footer-legal">
      <p>
        © {today.getFullYear()} {SITE_TITLE} • 
        <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank" rel="noopener noreferrer" class="license-link">CC BY-NC-SA 4.0</a> • 
        <a href="https://opensource.org/licenses/MIT" target="_blank" rel="noopener noreferrer" class="license-link">MIT</a>
      </p>
    </div>
  
    <div class="footer-meta">
      <a href="/sitemap-index.xml" class="meta-link">Sitemap</a>
      <a href="/rss.xml" class="meta-link"><Rss class="meta-icon" />RSS</a>
      <a href="/privacy" class="meta-link"><FileText class="meta-icon" />Privacy</a>
      <span class="version-badge">v0.0.1</span>
    </div>
  </Container>
  
  <ScrollToTop />
</footer>

<style>
  .footer {
    width: 100%;
    max-width: 100%;
    background-color: var(--color-bg);
    border-top: 1px solid var(--color-border);
    margin-top: var(--spacing-2xl);
    color: var(--color-text);
    position: relative;
  }
  
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing) 0;
    border-top: 1px solid var(--color-border);
    background-color: var(--color-bg-secondary);
  }

  .footer-legal {
    font-size: var(--font-size-sm);
    opacity: 0.8;
  }

  .footer-legal p {
    margin: 0;
  }

  .license-link {
    color: var(--color-link);
    text-decoration: none;
    font-weight: 500;
  }

  .license-link:hover {
    text-decoration: underline;
  }

  .footer-meta {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .meta-link {
    color: var(--color-text);
    text-decoration: none;
    font-size: var(--font-size-sm);
    opacity: 0.8;
    transition: opacity var(--transition-fast);
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
  }

  .meta-link:hover {
    opacity: 1;
    color: var(--color-link);
  }

  .meta-icon {
    width: 1em;
    height: 1em;
  }

  .version-badge {
    font-size: var(--font-size-xs);
    opacity: 0.6;
    font-family: var(--font-family-mono);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .footer-bottom {
      flex-direction: column;
      gap: var(--spacing);
      text-align: center;
    }
  }
</style>
