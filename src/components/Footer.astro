---
import { 
  Home, 
  Tag, 
  User, 
  Map, 
  Brain, 
  MessageSquare, 
  Github, 
  Youtube, 
  Laptop, 
  ArrowUp,
  Rss,
  FileText,
  ExternalLink
} from 'lucide-astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const today = new Date();
---

<footer class="footer">
  <div class="footer-content">
    <div class="site-info">
      <div class="site-title">
        <span class="diamond-icon">◆</span>
        {SITE_TITLE}
      </div>
      <p class="site-description">{SITE_DESCRIPTION}</p>
    </div>
    
    <div class="footer-sections">
      <div class="footer-column">
        <h3 class="column-header">Quick Links</h3>
        <ul class="footer-links">
          <li><a href="/" class="footer-link"><Home class="link-icon" />Home</a></li>
          <li><a href="/writings" class="footer-link"><Tag class="link-icon" />Writings</a></li>
          <li><a href="/about" class="footer-link"><User class="link-icon" />About</a></li>
        </ul>
      </div>
      
      <div class="footer-column">
        <h3 class="column-header">Resources</h3>
        <ul class="footer-links">
          <li><a href="/writings" class="footer-link"><Map class="link-icon" />All Posts</a></li>
          <li><a href="/rss.xml" class="footer-link"><Brain class="link-icon" />RSS Feed</a></li>
          <li><a href="/sitemap-index.xml" class="footer-link"><Tag class="link-icon" />Sitemap</a></li>
          <li><a href="/privacy" class="footer-link"><MessageSquare class="link-icon" />Privacy</a></li>
        </ul>
      </div>
      
      <div class="footer-column">
        <h3 class="column-header">Connect</h3>
        <ul class="footer-links">
          <li><a href="https://github.com" target="_blank" rel="noopener noreferrer" class="footer-link"><Github class="link-icon" />GitHub</a></li>
          <li><a href="https://youtube.com" target="_blank" rel="noopener noreferrer" class="footer-link"><Youtube class="link-icon" />YouTube</a></li>
          <li><a href="/about" class="footer-link"><Laptop class="link-icon" />About</a></li>
        </ul>
      </div>
    </div>
  </div>
  
  <div class="footer-bottom">
          <div class="footer-legal">
        <p>
          © {today.getFullYear()} {SITE_TITLE} • 
          <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank" rel="noopener noreferrer" class="license-link">CC BY-NC-SA 4.0</a> • 
          <a href="https://opensource.org/licenses/MIT" target="_blank" rel="noopener noreferrer" class="license-link">MIT</a>
        </p>
      </div>
    
    <div class="footer-meta">
      <a href="/sitemap-index.xml" class="meta-link">Sitemap</a>
      <a href="/rss.xml" class="meta-link"><Rss class="meta-icon" />RSS</a>
      <a href="/privacy" class="meta-link"><FileText class="meta-icon" />Privacy</a>
      <span class="version-badge">v0.0.1</span>
    </div>
  </div>
  
  <button id="scroll-to-top" class="scroll-to-top" aria-label="Scroll to top">
    <ArrowUp />
  </button>
</footer>

<script>
  // Scroll to top functionality
  const scrollToTopBtn = document.getElementById('scroll-to-top');
  
  // Show/hide button based on scroll position
  window.addEventListener('scroll', () => {
    if (window.pageYOffset > 300) {
      scrollToTopBtn?.classList.add('visible');
    } else {
      scrollToTopBtn?.classList.remove('visible');
    }
  });
  
  // Scroll to top when clicked
  scrollToTopBtn?.addEventListener('click', () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });
</script>

<style>
  .footer {
    width: 100%;
    background-color: var(--color-bg);
    border-top: 1px solid var(--color-border);
    margin-top: calc(var(--spacing) * 3);
    color: var(--color-text);
    position: relative;
  }
  
  .footer-content {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: calc(var(--spacing) * 2);
    padding: var(--spacing) var(--container-padding);
  }
  
  .footer-sections {
    display: flex;
    gap: calc(var(--spacing) * 1.5);
  }
  
  .footer-column {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }
  
  .site-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing);
  }
  
  .site-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--color-text);
  }
  
  .diamond-icon {
    color: #60a5fa;
    font-size: 0.875rem;
  }
  
  .site-description {
    margin: 0;
    line-height: 1.6;
    opacity: 0.8;
    max-width: 300px;
  }
  
  .column-header {
    font-size: var(--font-size-base);
    font-weight: 600;
    margin: 0 0 var(--spacing) 0;
    color: var(--color-text);
  }
  
  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .footer-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-fast);
    opacity: 0.8;
  }
  
  .footer-link:hover {
    color: var(--color-link);
    opacity: 1;
  }
  
  .link-icon {
    width: 1rem;
    height: 1rem;
    opacity: 0.7;
  }
  
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing) var(--container-padding);
    border-top: 1px solid var(--color-border);
    background-color: var(--color-bg-secondary);
  }
  
  .footer-legal {
    font-size: var(--font-size-sm);
    opacity: 0.8;
  }
  
  .footer-legal p {
    margin: 0;
  }
  

  
  .license-link {
    color: var(--color-link);
    text-decoration: none;
    font-weight: 500;
  }
  
  .license-link:hover {
    text-decoration: underline;
  }
  
  .footer-meta {
    display: flex;
    align-items: center;
    gap: calc(var(--spacing) * 1.5);
  }
  
  .meta-link {
    color: var(--color-text);
    text-decoration: none;
    font-size: var(--font-size-sm);
    opacity: 0.8;
    transition: opacity var(--transition-fast);
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
  
  .meta-link:hover {
    opacity: 1;
    color: var(--color-link);
  }
  
  .meta-icon {
    width: 0.875rem;
    height: 0.875rem;
  }
  
  .version-badge {
    background-color: #ef4444;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  .scroll-to-top {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    background-color: #8b5cf6;
    color: white;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transform: translateY(1rem);
    transition: all var(--transition-fast);
    z-index: 1000;
  }
  
  .scroll-to-top.visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  
  .scroll-to-top:hover {
    background-color: #7c3aed;
    transform: translateY(-0.25rem);
  }
  
  .scroll-to-top:focus {
    outline: 2px solid var(--color-focus);
    outline-offset: 2px;
  }
  
  .scroll-to-top svg {
    width: 1.25rem;
    height: 1.25rem;
  }
  
  @media (max-width: 1024px) {
    .footer-content {
      flex-direction: column;
      gap: calc(var(--spacing) * 2);
    }
    
    .footer-sections {
      justify-content: space-between;
    }
    
    .site-description {
      max-width: none;
    }
  }
  
  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: calc(var(--spacing) * 2);
      padding: var(--spacing) calc(var(--container-padding) * 0.5);
    }
    
    .footer-sections {
      flex-direction: column;
      gap: calc(var(--spacing) * 2);
    }
    
    .footer-bottom {
      flex-direction: column;
      gap: var(--spacing);
      text-align: center;
      padding: var(--spacing) calc(var(--container-padding) * 0.5);
    }
    
    .scroll-to-top {
      bottom: 1rem;
      right: 1rem;
      width: 2.5rem;
      height: 2.5rem;
    }
  }
</style>
