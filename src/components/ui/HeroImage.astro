---
interface Props {
	src: string;
	alt: string;
	title?: string;
	width?: number;
	height?: number;
	class?: string;
	centered?: boolean;
	rounded?: boolean;
}

const { 
	src, 
	alt, 
	title, 
	width = 800, 
	height = 400, 
	class: className = '',
	centered = true,
	rounded = true
} = Astro.props;
---

<div class:list={['hero-image', { 'centered': centered, 'rounded': rounded }, className]}>
	<img 
		src={src} 
		alt={alt}
		title={title || alt}
		width={width}
		height={height}
		loading="lazy"
		decoding="async"
	/>
</div>

<style>
	.hero-image {
		width: 100%;
		margin-bottom: var(--spacing-xl);
		text-align: center;
	}
	
	.hero-image:not(.centered) {
		text-align: left;
	}
	
	.hero-image img {
		max-width: 100%;
		height: auto;
		width: 100%;
		object-fit: cover;
		transition: transform var(--transition-normal);
	}
	
	.hero-image.rounded img {
		border-radius: var(--border-radius-xl);
	}
	
	.hero-image:hover img {
		transform: scale(1.01);
	}
	
	/* Enhanced styling for blog posts */
	.hero-image.main-hero-image {
		margin-bottom: var(--spacing-2xl);
	}
	
	.hero-image.main-hero-image img {
		box-shadow: var(--shadow-lg);
		border: 1px solid var(--color-border-light);
	}
	
	/* Responsive adjustments */
	@media (max-width: 768px) {
		.hero-image {
			margin-bottom: var(--spacing-lg);
		}
		
		.hero-image.main-hero-image {
			margin-bottom: var(--spacing-xl);
		}
	}
</style>
