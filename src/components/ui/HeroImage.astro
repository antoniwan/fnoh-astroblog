---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
	src: ImageMetadata;
	alt: string;
	class?: string;
	width?: number;
	height?: number;
}

const { src, alt, class: className = '', width, height } = Astro.props;
---

<Image
	src={src}
	alt={alt}
	width={width}
	height={height}
	class={className}
	format="webp"
	quality={80}
	loading="lazy"
	decoding="async"
/>
