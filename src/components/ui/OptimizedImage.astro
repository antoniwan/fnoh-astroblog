---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
	src: ImageMetadata;
	alt: string;
	class?: string;
	width?: number;
	height?: number;
	format?: 'webp' | 'avif' | 'jpeg';
	quality?: number;
	loading?: 'lazy' | 'eager';
	decoding?: 'async' | 'sync' | 'auto';
	priority?: boolean;
}

const { 
	src, 
	alt, 
	class: className = '', 
	width, 
	height,
	format = 'webp',
	quality = 80,
	loading = 'lazy',
	decoding = 'async',
	priority = false
} = Astro.props;

// Set loading to eager if priority is true
const finalLoading = priority ? 'eager' : loading;
---

<Image
	src={src}
	alt={alt}
	width={width}
	height={height}
	class={className}
	format={format}
	quality={quality}
	loading={finalLoading}
	decoding={decoding}
/>
