---
// GlobalStyles.astro - Global styles for typography, code blocks, and shared elements
// Following Astro best practices: https://docs.astro.build/en/guides/styling/#global-styles
---

<style is:global>
  /* ===== GLOBAL TYPOGRAPHY STYLES ===== */

  /* Base typography */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-family-heading);
    color: var(--color-heading);
    line-height: var(--line-height-tight);
    margin: 0;
  }

  h1 {
    font-size: var(--font-size-5xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-xl);
  }

  h2 {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-lg);
  }

  h3 {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing);
  }

  h4,
  h5,
  h6 {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-sm);
  }

  p {
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
    color: var(--color-text);
    margin-bottom: var(--spacing-lg);
  }

  /* Lists */
  ul,
  ol {
    margin-bottom: var(--spacing-lg);
    padding-left: var(--spacing-xl);
    line-height: var(--line-height-relaxed);
  }

  li {
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  /* ===== ATOMIC LINK FOUNDATION ===== */
  /* Only the most basic, non-conflicting styles */
  a {
    color: var(--color-link);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  a:visited {
    color: var(--color-link-visited);
  }

  /* ===== GLOBAL CODE STYLES ===== */

  /* Inline code - no background, just styling */
  code {
    font-family: var(--font-family-mono);
    font-size: var(--font-size-sm);
    color: var(--color-code-text);
    padding: var(--spacing-xs) var(--spacing-sm);
  }

  /* Code blocks - only pre tags get backgrounds */
  pre {
    font-family: var(--font-family-mono);
    font-size: var(--font-size-sm);
    background-color: var(--color-code-bg);
    color: var(--color-code-text);
    padding: var(--spacing-lg);
    border-radius: var(--border-radius-md);
    border: 1px solid var(--color-code-border);
    overflow-x: auto;
    line-height: var(--line-height-relaxed);
    margin: var(--spacing-xl) 0;
    box-shadow: var(--shadow-sm);
  }

  /* Remove background from code inside pre */
  pre code {
    background: none;
    padding: 0;
    border: none;
    border-radius: 0;
  }

  /* Code selection styling */
  code::selection,
  pre::selection {
    background-color: var(--color-code-selection-bg);
    color: var(--color-code-text);
  }

  code::-moz-selection,
  pre::-moz-selection {
    background-color: var(--color-code-selection-bg);
    color: var(--color-code-text);
  }

  /* ===== GLOBAL BLOCKQUOTE STYLES ===== */

  blockquote {
    margin: var(--spacing-xl) 0;
    padding: var(--spacing-lg) var(--spacing-xl);
    border-left: 4px solid var(--color-blockquote-border);
    background-color: var(--color-blockquote-bg);
    font-family: var(--font-family-serif);
    font-style: italic;
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    border-radius: 0 var(--border-radius-md) var(--border-radius-md) 0;
    color: var(--color-blockquote-text);
    position: relative;
  }

  blockquote::before {
    content: '"';
    font-size: var(--font-size-4xl);
    color: var(--color-blockquote-border);
    position: absolute;
    top: var(--spacing-sm);
    left: var(--spacing-lg);
    font-family: var(--font-family-heading);
  }

  blockquote p {
    margin: 0;
    color: var(--color-blockquote-text);
  }

  /* ===== GLOBAL TABLE STYLES ===== */

  table {
    width: 100%;
    border-collapse: collapse;
    margin: var(--spacing-xl) 0;
    font-size: var(--font-size-sm);
    max-width: 100%;
    border: 1px solid var(--color-table-border);
    border-radius: var(--border-radius-md);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
  }

  th,
  td {
    padding: var(--spacing);
    text-align: left;
    border-bottom: 1px solid var(--color-table-border);
    color: var(--color-text);
  }

  th {
    background-color: var(--color-table-header-bg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-heading);
    border-bottom: 2px solid var(--color-table-border);
  }

  tr:hover {
    background-color: var(--color-hover-bg);
  }

  /* ===== GLOBAL IMAGE STYLES ===== */

  img {
    max-width: 100%;
    height: auto;
    border-radius: var(--border-radius-md);
    box-shadow: var(--shadow-sm);
    margin: var(--spacing-lg) 0;
  }

  /* ===== GLOBAL HORIZONTAL RULE STYLES ===== */

  hr {
    border: none;
    height: 1px;
    background-color: var(--color-border-light);
    margin: var(--spacing-2xl) 0;
    opacity: 0.6;
  }

  /* ===== GLOBAL SELECTION STYLES ===== */

  ::selection {
    background-color: var(--color-selection-bg);
    color: var(--color-selection-text);
  }

  /* ===== GLOBAL FOCUS STYLES ===== */

  *:focus {
    outline: 2px solid var(--color-focus);
    outline-offset: 3px;
    border-radius: var(--border-radius-sm);
  }

  button:focus,
  a:focus,
  input:focus,
  textarea:focus,
  select:focus {
    outline: 2px solid var(--color-focus);
    outline-offset: 2px;
    box-shadow: 0 0 0 4px var(--color-focus-ring);
    border-radius: var(--border-radius-sm);
  }

  /* ===== RESPONSIVE TYPOGRAPHY ===== */

  @media (max-width: 768px) {
    h1 {
      font-size: var(--font-size-3xl);
      margin-bottom: var(--spacing-lg);
    }

    h2 {
      font-size: var(--font-size-2xl);
      margin-bottom: var(--spacing);
    }

    h3 {
      font-size: var(--font-size-xl);
      margin-bottom: var(--spacing-sm);
    }

    p {
      font-size: var(--font-size-base);
    }

    blockquote {
      padding: var(--spacing) var(--spacing-lg);
      margin: var(--spacing-lg) 0;
      font-size: var(--font-size-base);
    }

    ul,
    ol {
      padding-left: var(--spacing-lg);
    }

    pre {
      padding: var(--spacing);
      margin: var(--spacing-xl) 0;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: var(--font-size-2xl);
    }

    h2 {
      font-size: var(--font-size-xl);
    }

    h3 {
      font-size: var(--font-size-lg);
    }
  }
</style>
